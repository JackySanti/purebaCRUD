            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col"> <img src="img/000000.png" class="mx-auto d-block imgtop"></div>
                        <div class="col esp">
                            <div class="row"> <input type="text" class="form-control" id="mArticulo"
                                    placeholder="Nombre del Articulo"> </div>
                            <div class="row"> <input type="text" class="form-control" id="mMarca" placeholder="Marca">
