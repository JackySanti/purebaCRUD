                            <div class="row"> <input type="text" class="form-control" id="mPrecio" placeholder="Precio">
                            </div>
                            <div class="row"> <input type="text" class="form-control" id="mUnidad" placeholder="Unidad">
                            </div>
                            <div class="row"> <input type="text" class="form-control" id="mExistencia"
                                    placeholder="Existencia"> </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btnaceptar" onclick="actualizar()">Aceptar</button>
            </div>

        </div>
    </div>
</div>

