<div class="container">
  <div class="row">
    {{#each values}}
    <div class="col-3">
      <div class="card" style="width: 200px;">
        <div class="card-header">
          <div class="row">
            <div class="col">
              <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editarModal"
                title="Editar"><i class="far fa-edit"></i></button>
            </div>
            <div class="col">
              <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#eliminarModal"
                title="Eliminar"><i class="far fa-trash-alt"></i></button>
            </div>
          </div>
        </div>
        <img src="img/000000.png" class="card-img-top">
        <div class="card-body">
          <h6 class="card-title">{{NOMBRE}} - {{UNIDAD}}</h5>
            <p class="card-text">{{MARCA}}</p>
            <p class="card-text">${{PRECIO}} MXN</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="modal" id="editarModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
