          <div class="col"> <img src="img/000000.png" class="mx-auto d-block imgtop"></div>
          <div class="col esp">
            <div class="row"> <input type="text" class="form-control" id="nomArticulo"
                placeholder="Nombre del Articulo">
            </div>
            <div class="row"> <input type="text" class="form-control" id="marca" placeholder="Marca"> </div>
            <div class="row"> <input type="text" class="form-control" id="precio" placeholder="Precio"> </div>
            <div class="row"> <input type="text" class="form-control" id="unidad" placeholder="Unidad"> </div>
            <div class="row"> <input type="text" class="form-control" id="existencia" placeholder="Existencia"> </div>
          </div>
        </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btnaceptar">Aceptar</button>
      </div>

    </div>
  </div>
</div>

